<Window x:Class="Labb2Database.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="List Window" Height="450" Width="800">
    <Grid>
        <ListView x:Name="stockBalanceListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="StoreID" DisplayMemberBinding="{Binding StoreID}" Width="100"/>
                    <GridViewColumn Header="ISBN" DisplayMemberBinding="{Binding ISBN}" Width="100"/>
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
